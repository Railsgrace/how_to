<h1>Content</h1>

<p>
  <b>Title</b><br>
  <%= @content.title %>
</p>

<p>
  <b>Description</b><br>
  <%= @content.description.html_safe %>
</p>

<p>
  <b>Active</b><br>
  <%= @content.active %>
</p>

<div class="form-actions">
  <%= link_to 'Back', contents_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_content_path(@content), :class => 'btn' %>
  <%= link_to 'Delete', content_path(@content), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
